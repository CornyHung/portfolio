{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "**/node_modules/*"],
    "checkJS": true
}
